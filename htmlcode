        /**
         * Registra um novo usu치rio e criptografa seus dados.
         */
        async function registerUser() {
            const username = document.getElementById('reg-username').value.trim();
            const password = document.getElementById('reg-password').value;
            const userData = document.getElementById('user-data').value.trim();
            const statusElement = document.getElementById("register-status");
            statusElement.className = ''; // Resetar classes
 
            // Valida칞칚o dos campos
            if (!username) {
                logMessage("Erro: Nome de usu치rio n칚o fornecido.", 'error');
                statusElement.textContent = "Erro: Nome de usu치rio n칚o fornecido.";
                statusElement.classList.add('status-error');
                return;
            }
            if (password.length < 8) {
                logMessage("Erro: A senha deve ter pelo menos 8 caracteres.", 'error');
                statusElement.textContent = "Erro: A senha deve ter pelo menos 8 caracteres.";
                statusElement.classList.add('status-error');
                return;
            }
            if (!userData) {
                logMessage("Erro: Dados do usu치rio n칚o fornecidos.", 'error');
                statusElement.textContent = "Erro: Dados do usu치rio n칚o fornecidos.";
                statusElement.classList.add('status-error');
                return;
            }
 
            if (userDB[username]) {
                logMessage(`Erro: O usu치rio "${username}" j치 est치 registrado.`, 'error');
                statusElement.textContent = `Erro: O usu치rio "${username}" j치 est치 registrado.`;
                statusElement.classList.add('status-error');
                return;
            }
 
            try {
                const { hash: passwordHash, salt } = await generatePasswordHash(password);
 
                const userCED = crypto.getRandomValues(new Uint8Array(32));
                logMessage(`CED gerada para o usu치rio "${username}": ${Array.from(userCED).toString()}`, 'info');
 
                const iv = crypto.getRandomValues(new Uint8Array(12));
                const cedKey = await crypto.subtle.importKey("raw", userCED, "AES-GCM", false, ["encrypt", "decrypt"]);
                const encryptedData = await crypto.subtle.encrypt({ name: "AES-GCM", iv: iv }, cedKey, new TextEncoder().encode(userData));
                logMessage(`Dados do usu치rio "${username}" criptografados com a CED no backend: ${Array.from(new Uint8Array(encryptedData)).toString()}`, 'info');
 
                const encryptedCED = await crypto.subtle.encrypt({ name: "AES-GCM", iv: iv }, masterKey, userCED);
                logMessage(`CED criptografada para o usu치rio "${username}": ${Array.from(new Uint8Array(encryptedCED)).toString()}`, 'info');
 
                userDB[username] = {
                    salt,
                    passwordHash: Array.from(new Uint8Array(passwordHash)),
                    iv: Array.from(iv),
                    encryptedData: Array.from(new Uint8Array(encryptedData)),
                    encryptedCED: Array.from(new Uint8Array(encryptedCED))
                };
 
                logMessage(`Usu치rio "${username}" registrado com sucesso.`, 'success');
                statusElement.textContent = `Usu치rio "${username}" registrado com sucesso.`;
                statusElement.classList.add('status-success');
 
                // Atualiza a tabela do servidor
                updateServerTable();
 
                // Habilita o pr칩ximo bot칚o
                document.getElementById("next-btn-2").disabled = false;
 
                // Destaque no diagrama
                highlightDiagram('registerUser');
 
            } catch (error) {
                logMessage("Erro ao registrar o usu치rio: " + error.message, 'error');
                statusElement.textContent = "Erro ao registrar o usu치rio.";
                statusElement.classList.add('status-error');
            }
        }
 
        /**
         * Realiza o login do usu치rio e gera um token tempor치rio.
         */
        async function loginUser() {
            const username = document.getElementById('login-username').value.trim();
            const password = document.getElementById('login-password').value;
            const statusElement = document.getElementById("login-status");
            statusElement.className = ''; // Resetar classes
 
            if (!username || !password) {
                logMessage("Erro: Nome de usu치rio ou senha n칚o fornecidos.", 'error');
                statusElement.textContent = "Erro: Nome de usu치rio ou senha n칚o fornecidos.";
                statusElement.classList.add('status-error');
                return;
            }
 
            const user = userDB[username];
            if (!user) {
                logMessage("Erro: Usu치rio n칚o encontrado.", 'error');
                statusElement.textContent = "Erro: Usu치rio n칚o encontrado.";
                statusElement.classList.add('status-error');
                return;
            }
 
            try {
                const { salt, passwordHash } = user;
                const { hash: loginHash } = await generatePasswordHash(password, new Uint8Array(salt));
                if (Array.from(new Uint8Array(loginHash)).toString() !== passwordHash.toString()) {
                    logMessage("Erro: Senha incorreta.", 'error');
                    statusElement.textContent = "Erro: Senha incorreta.";
                    statusElement.classList.add('status-error');
                    return;
                }
 
                const token = crypto.getRandomValues(new Uint8Array(16)).join("");
                tokens[username] = { token, expires: Date.now() + tokenExpiryInterval };
                logMessage(`Login bem-sucedido. Token gerado para o usu치rio "${username}": ${token}`, 'success');
                statusElement.textContent = `Login bem-sucedido. Token gerado para "${username}".`;
                statusElement.classList.add('status-success');
 
                setTimeout(() => checkTokenExpiry(username), tokenExpiryInterval);
                // Remover interval j치 existente para evitar m칰ltiplos intervals
                if (!autoRotationInterval) {
                    setInterval(() => updateLoggedUsers(), 1000); // Atualiza o temporizador a cada segundo
                }
 
                const decryptedCED = await crypto.subtle.decrypt({ name: "AES-GCM", iv: new Uint8Array(user.iv) }, masterKey, new Uint8Array(user.encryptedCED));
                const cedKey = await crypto.subtle.importKey("raw", decryptedCED, "AES-GCM", false, ["decrypt"]);
                const decryptedData = await crypto.subtle.decrypt({ name: "AES-GCM", iv: new Uint8Array(user.iv) }, cedKey, new Uint8Array(user.encryptedData));
 
                tokens[username].data = new TextDecoder().decode(decryptedData);
                updateLoggedUsers();
                logMessage(`Dados descriptografados para o usu치rio "${username}": ${tokens[username].data}`, 'info');
 
                // Exibir o token no log tamb칠m
                logMessage(`Token gerado para o usu치rio "${username}": ${token}`, 'info');
 
                // Habilita o pr칩ximo bot칚o
                document.getElementById("next-btn-3").disabled = false;
 
                // Destaque no diagrama
                highlightDiagram('loginUser');
 
            } catch (error) {
                logMessage("Erro ao realizar o login: " + error.message, 'error');
                statusElement.textContent = "Erro ao realizar o login.";
                statusElement.classList.add('status-error');
            }
        }
 
        /**
         * Desloga o usu치rio.
         * @param {string} username - O nome do usu치rio a ser deslogado.
         */
        function logoutUser(username) {
            if (tokens[username]) {
                delete tokens[username];
                logMessage(`Usu치rio "${username}" deslogado.`, 'info');
                updateLoggedUsers();
            } else {
                logMessage(`Usu치rio "${username}" n칚o est치 logado.`, 'error');
            }
        }
 
        /**
         * Inicia a rota칞칚o autom치tica da chave mestra.
         */
        function startAutoRotation() {
            const interval = parseInt(document.getElementById('rotation-interval').value, 10) * 1000;
            const statusElement = document.getElementById("rotation-status");
 
            if (isNaN(interval) || interval <= 0) {
                logMessage("Erro: Intervalo de rota칞칚o inv치lido.", 'error');
                statusElement.textContent = "Erro: Intervalo de rota칞칚o inv치lido.";
                statusElement.classList.add('status-error');
                return;
            }
 
            if (autoRotationInterval) {
                logMessage("Rota칞칚o autom치tica j치 est치 em execu칞칚o.", 'error');
                statusElement.textContent = "Rota칞칚o autom치tica j치 est치 em execu칞칚o.";
                statusElement.classList.add('status-error');
                return;
            }
            autoRotationInterval = setInterval(rotateMasterKey, interval);
            logMessage(`Rota칞칚o autom치tica iniciada (a cada ${interval / 1000} segundos).`, 'success');
            statusElement.textContent = `Rota칞칚o autom치tica iniciada (a cada ${interval / 1000} segundos).`;
            statusElement.classList.add('status-success');
 
            // Destaque no diagrama
            highlightDiagram('autoRotation');
        }
 
        /**
         * Para a rota칞칚o autom치tica da chave mestra.
         */
        function stopAutoRotation() {
            const statusElement = document.getElementById("rotation-status");
            if (autoRotationInterval) {
                clearInterval(autoRotationInterval);
                autoRotationInterval = null;
                logMessage("Rota칞칚o autom치tica parada.", 'info');
                statusElement.textContent = "Rota칞칚o autom치tica parada.";
                statusElement.classList.add('status-info');
            } else {
                logMessage("Rota칞칚o autom치tica n칚o est치 em execu칞칚o.", 'error');
                statusElement.textContent = "Rota칞칚o autom치tica n칚o est치 em execu칞칚o.";
                statusElement.classList.add('status-error');
            }
        }
 
        /**
         * Realiza a rota칞칚o da chave mestra e recriptografa as CEDs dos usu치rios.
         */
        async function rotateMasterKey() {
            const newMasterKeyInput = crypto.getRandomValues(new Uint8Array(16)).join("");
            try {
                const keyMaterial = new TextEncoder().encode(newMasterKeyInput);
                const hashBuffer = await crypto.subtle.digest("SHA-256", keyMaterial);
 
                const newMasterKey = await crypto.subtle.importKey("raw", hashBuffer, "AES-GCM", false, ["encrypt", "decrypt"]);
 
                logMessage("Iniciando a rota칞칚o da chave mestra...", 'info');
 
                for (const username in userDB) {
                    const user = userDB[username];
                    logMessage(`CED criptografada com a chave antiga para o usu치rio "${username}": ${user.encryptedCED.toString()}`, 'info');
                    const decryptedCED = await crypto.subtle.decrypt({ name: "AES-GCM", iv: new Uint8Array(user.iv) }, masterKey, new Uint8Array(user.encryptedCED));
 
                    const reencryptedCED = await crypto.subtle.encrypt({ name: "AES-GCM", iv: new Uint8Array(user.iv) }, newMasterKey, decryptedCED);
                    userDB[username].encryptedCED = Array.from(new Uint8Array(reencryptedCED));
                    logMessage(`CED recriptografada com a nova chave para o usu치rio "${username}": ${Array.from(new Uint8Array(reencryptedCED)).toString()}`, 'info');
                }
 
                masterKey = newMasterKey;
                logMessage("Rota칞칚o da chave mestra conclu칤da com sucesso.", 'success');
 
                // Atualiza a tabela do servidor ap칩s rota칞칚o
                updateServerTable();
 
                // Destaque no diagrama
                highlightDiagram('rotateMasterKey');
 
            } catch (error) {
                logMessage("Erro ao rotacionar a chave mestra: " + error.message, 'error');
            }
        }
 
        /**
         * Verifica se o token do usu치rio expirou.
         * @param {string} username - O nome do usu치rio.
         */
        function checkTokenExpiry(username) {
            const userToken = tokens[username];
            if (userToken && Date.now() > userToken.expires) {
                logMessage(`Token para o usu치rio "${username}" expirou.`, 'info');
                delete tokens[username];
                updateLoggedUsers();
            }
        }
 
        /**
         * Navega칞칚o do Tutorial
         */
        function nextStep(current) {
            if (current === 1 && masterKey) {
                showStep(2);
            }
            if (current === 2 && userDB.hasOwnProperty(document.getElementById('reg-username').value.trim())) {
                showStep(3);
            }
            if (current === 3 && tokens.hasOwnProperty(document.getElementById('login-username').value.trim())) {
                showStep(4);
            }
            if (current === 4) {
                finishTutorial();
            }
        }
 
        function prevStep(current) {
            if (current === 2) {
                showStep(1);
            }
            if (current === 3) {
                showStep(2);
            }
            if (current === 4) {
                showStep(3);
            }
        }
 
        function showStep(step) {
            for (let i = 1; i <= totalSteps; i++) {
                const stepElement = document.getElementById(`step-${i}`);
                if (stepElement) {
                    stepElement.classList.remove('active');
                }
            }
            if (step <= totalSteps) {
                const stepElement = document.getElementById(`step-${step}`);
                if (stepElement) {
                    stepElement.classList.add('active');
                    currentStep = step;
                }
            }
 
            // Ocultar bot칫es de navega칞칚o ap칩s a conclus칚o
            if (step === 4) {
                // Ap칩s configurar a rota칞칚o, ocultar os bot칫es de navega칞칚o linear
                hideNavigationButtons();
            }
        }
 
        /**
         * Finaliza o tutorial e exibe a vis칚o geral do backend.
         */
        function finishTutorial() {
            // Remover todas as etapas ativas
            document.querySelectorAll('.step').forEach(step => step.classList.remove('active'));
            logMessage("Tutorial conclu칤do. Vis칚o geral do backend exibida.", 'info');
 
            // Implementar fun칞칚o de finaliza칞칚o, como exibir um resumo ou reiniciar o tutorial
            // Por exemplo, exibir um alerta confirmando a conclus칚o
            alert("Tutorial conclu칤do com sucesso!");
 
            // Opcional: Reiniciar o tutorial ap칩s finaliza칞칚o
            resetTutorial();
        }
 
        /**
         * Reinicia o tutorial, limpando todos os dados e retornando para a primeira etapa.
         */
        function resetTutorial() {
            // Limpar dados do usu치rio
            for (const username in userDB) {
                delete userDB[username];
            }
            // Limpar tokens
            for (const username in tokens) {
                delete tokens[username];
            }
            // Limpar tabela do servidor
            updateServerTable();
            // Limpar log
            clearLog();
            // Atualizar usu치rios logados
            updateLoggedUsers();
            // Resetar masterKey
            masterKey = null;
            // Resetar etapas
            showStep(1);
            // Habilitar novamente os bot칫es de navega칞칚o linear
            showNavigationButtons();
            // Desabilitar bot칫es de pr칩ximo
            document.getElementById("next-btn-1").disabled = true;
            document.getElementById("next-btn-2").disabled = true;
            document.getElementById("next-btn-3").disabled = true;
            document.getElementById("done-btn").disabled = true;
            // Resetar campos de entrada
            document.getElementById('master-key').value = '';
            document.getElementById('reg-username').value = '';
            document.getElementById('reg-password').value = '';
            document.getElementById('user-data').value = '';
            document.getElementById('login-username').value = '';
            document.getElementById('login-password').value = '';
            document.getElementById('rotation-interval').value = '';
            // Remover qualquer rota칞칚o autom치tica ativa
            if (autoRotationInterval) {
                clearInterval(autoRotationInterval);
                autoRotationInterval = null;
            }
            // Remover destaques no diagrama
            removeHighlights();
            logMessage("Tutorial reiniciado pelo usu치rio.", 'info');
        }
 
        /**
         * Destaca uma parte espec칤fica do diagrama.
         * @param {string} action - A a칞칚o que desencadeia o destaque.
         */
        function highlightDiagram(action) {
            const arrow = document.getElementById('arrow-flow');
            switch(action) {
                case 'masterKey':
                    arrow.classList.add('highlight');
                    setTimeout(() => arrow.classList.remove('highlight'), 2000);
                    break;
                case 'registerUser':
                    arrow.classList.add('highlight');
                    setTimeout(() => arrow.classList.remove('highlight'), 2000);
                    break;
                case 'loginUser':
                    arrow.classList.add('highlight');
                    setTimeout(() => arrow.classList.remove('highlight'), 2000);
                    break;
                case 'autoRotation':
                    arrow.classList.add('highlight');
                    setTimeout(() => arrow.classList.remove('highlight'), 2000);
                    break;
                case 'rotateMasterKey':
                    arrow.classList.add('highlight');
                    setTimeout(() => arrow.classList.remove('highlight'), 2000);
                    break;
                case 'overview':
                    arrow.classList.remove('highlight');
                    break;
                default:
                    break;
            }
        }
 
        /**
         * Remove todos os destaques no diagrama.
         */
        function removeHighlights() {
            const arrow = document.getElementById('arrow-flow');
            arrow.classList.remove('highlight');
        }
 
        /**
         * Atualiza os temporizadores de expira칞칚o de token a cada segundo.
         */
        setInterval(() => {
            const users = Object.keys(tokens);
            users.forEach(username => {
                const userToken = tokens[username];
                if (userToken && Date.now() < userToken.expires) {
                    const remaining = Math.round((userToken.expires - Date.now()) / 1000);
                    // Atualiza o temporizador na sidebar direita
                    const loggedUsersDiv = document.getElementById('logged-users');
                    const userEntries = loggedUsersDiv.getElementsByTagName('p');
                    for (let p of userEntries) {
                        if (p.querySelector('strong') && p.querySelector('strong').textContent === username) {
                            const timerSpan = p.querySelector('.timer');
                            if (timerSpan) {
                                timerSpan.textContent = `Expira em: ${remaining}s`;
                            }
                        }
                    }
                }
            });
        }, 1000);
 
        /**
         * Fun칞칚o para navegar diretamente para uma etapa espec칤fica.
         * @param {string} stepId - O ID da etapa para navegar.
         */
        function navigateTo(stepId) {
            const stepNumber = stepId.split('-')[1];
            showStep(parseInt(stepNumber));
        }
 
        /**
         * Fun칞칚o para resetar tudo (dados, logs, etc.).
         */
        function resetAll() {
            if (confirm("Tem certeza que deseja resetar tudo? Isso ir치 limpar todos os dados e logs.")) {
                resetTutorial();
                logMessage("Todas as configura칞칫es e dados foram resetados.", 'info');
            }
        }
 
        /**
         * Fun칞칚o para esconder os bot칫es de navega칞칚o linear ap칩s a configura칞칚o.
         */
        function hideNavigationButtons() {
            document.querySelectorAll('.navigation-buttons').forEach(nav => {
                nav.style.display = 'none';
            });
        }
 
        /**
         * Fun칞칚o para mostrar os bot칫es de navega칞칚o linear ao reiniciar o tutorial.
         */
        function showNavigationButtons() {
            document.querySelectorAll('.navigation-buttons').forEach(nav => {
                nav.style.display = 'flex';
            });
        }
